<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.petrik.menu.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELSŐ ACTIVITY"
        android:id="@+id/textView_activity"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

    <Button
        android:text="Következő activity"
        android:textColor="#f8f7f7"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_next"
        android:background="@drawable/mybutton"
        />

    <Button
        android:text="Mentés"
        android:textColor="#f8f7f7"
        android:textSize="20dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save"
        android:background="@drawable/mybutton"
        />

    <Button
        android:text="Információ"
        android:textColor="#f8f7f7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_inform"
        android:textSize="20dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/mybutton"
        />

    <Button
        android:text="Kilépés"
        android:textColor="#f8f7f7"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_exit"
        android:background="@drawable/mybutton"
        android:layout_marginTop="21dp"
        />

    </LinearLayout>

</RelativeLayout>
